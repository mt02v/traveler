<!DOCTYPE html>
<html>
  <head>
    <title>Traveler</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
  </body>
    <%= if user_signed_in? %>
    <header>
      <div><%= link_to root_path do %><% end %></div>
      <div><%= link_to "トップ", root_path, class: "text-white" %></div>
      <div><%= link_to "投稿する", new_post_path ,class: "text-white" %></div>
      <div><%= link_to "投稿一覧", posts_path, class: "text-white" %></div>
      <div><%= link_to "ユーザー", user_path, class: "text-white" %></div>
      <div><%= link_to "マイページ" user_path(current_user.id), class: "text-white" %></div>
      <div><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "text-white" %></div>  
    </header>
    <% end %>  
    <%= yield %>
</html>
